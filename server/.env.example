# Server Configuration
NODE_ENV=development
PORT=7000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bloghok

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Auth Rate Limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5

# Upload Rate Limiting
UPLOAD_RATE_LIMIT_WINDOW_MS=3600000
UPLOAD_RATE_LIMIT_MAX=10

# Search Rate Limiting
SEARCH_RATE_LIMIT_WINDOW_MS=60000
SEARCH_RATE_LIMIT_MAX=30

# Token Management
TOKEN_BLACKLIST_DURATION=86400000

# Logging Configuration
LOG_LEVEL=info

# Cloudinary Configuration (Optional)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Admin IP Whitelist (Optional - comma separated)
ADMIN_ALLOWED_IPS=127.0.0.1,::1

# Security Configuration
BCRYPT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp

# Performance Configuration
DB_CONNECTION_TIMEOUT=30000
DB_SOCKET_TIMEOUT=60000
DB_MAX_POOL_SIZE=10

# Monitoring Configuration (Optional)
SENTRY_DSN=your-sentry-dsn-here
LOGGLY_TOKEN=your-loggly-token-here

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@bloghok.com

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Server Shutdown Configuration
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# Development Configuration
DEBUG=bloghok:*
